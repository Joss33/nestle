{
  "extends": "airbnb",
  "rules": {
    // Usa comillas simples para cadenas de texto
    "quotes": ["error", "single"],
    // Usa punto y coma al final de cada instrucción
    "semi": ["error", "always"],
    // Permite el uso de console.log() en desarrollo
    "no-console": "off",
    // Permite el uso de funciones anónimas si es necesario
    "func-names": "off",
    // Define una longitud máxima de línea de 100 caracteres
    "max-len": ["error", { "code": 100 }],
    // Usa espacios en lugar de tabulaciones para la indentación
    "indent": ["error", 2],
    // Define una longitud máxima para nombres de variables y funciones
    "id-length": ["error", { "min": 2, "max": 30 }],
    // Usa === en lugar de ==
    "eqeqeq": ["error", "always"],
    // Evita el uso de paréntesis innecesarios
    "no-extra-parens": "error",
    // Evita el uso de eval()
    "no-eval": "error"
  }
}